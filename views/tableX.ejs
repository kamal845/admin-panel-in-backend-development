  <main id="main" class="main">
    <section class="section profile">
      <form action="/tableX/search" method="GET">
        <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search">
        <select name="type">
            <option value="name" <%= searchType === 'name' ? 'selected' : '' %>>Name</option>
            <option value="age" <%= searchType === 'age' ? 'selected' : '' %>>Age</option>
        </select>
        <button type="submit">Search</button>
    </form>
    
    
      <form action="/tableX/create" method="GET">
        <button type="submit">Create Table</button>
      </form>
      <table>
        <thead>
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Age</th>
            <th>School</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% tables.forEach((table, index)=> { %>
            <tr>
              <td>
                <%= (currentPage - 1) * perPage + index + 1 %>
              </td>
              <td>
                <%= table.name %>
              </td>
              <td>
                <%= table.Age %>
              </td>
              <td>
                <%= table.school %>
              </td>
              <td>
                <button><a href="/tableX/edit/<%= table._id %>">Edit</a></button>
                <form action="/tableX/delete/<%= table._id %>" method="POST" style="display:inline;">
                  <button type="submit"
                    onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
        <div>
          <% if (currentPage > 1) { %>
              <a href="/tableX/home?page=<%= currentPage - 1 %>&search=<%= searchQuery %>&type=<%= searchType %>">Previous</a>
          <% } %>
          <% if (currentPage < totalPages) { %>
              <a href="/tableX/home?page=<%= currentPage + 1 %>&search=<%= searchQuery %>&type=<%= searchType %>">Next</a>
          <% } %>
      </div>
      </table>
    </section>
